{% schema %}
  {
    "name": "Shop the look",
    "tag": "section",
    "class" : "Image-with-product-slider",
    "settings": [
      {
        "type": "header",
        "content": "Adjuct Section Padding"
      },
      {
        "type" : "color",
        "id" : "section_background",
        "label" : "Section background",
        "default" : "#f5f5f7"
      },
      {
        "type" : "text",
        "id" : "section_heading",
        "label" : "Section Heading",
        "label" : "Look of the Day"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      },
      {
        "type": "header",
        "content": "Image Settings"
      },
      {
        "type" : "image_picker",
        "id" : "image",
        "label" : "Image"
      },
      {
        "type" : "image_picker",
        "id" : "image_mobile",
        "label" : "Image (Mobile)"
      }
    ],
    "blocks" : [
      {
        "type" : "product-content",
        "name" : "Product content",
        "settings" : [
          {
            "type" : "product",
            "id" : "product",
            "label" : "Choose product"
          },
          {
            "type" : "range",
            "id" : "left_position",
            "label" : "Distance from left",
            "min" : 10,
            "max" : 100,
            "step" : 1,
            "default" : 20,
            "info" : "The Distance from "

          },
          {
            "type" : "range",
            "id" : "right_position",
            "label" : "Distance from Right",
            "min" : 10,
            "max" : 100,
            "step" : 1,
            "default" : 20,
            "info" : "The Distance from "
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Shop the look"
      }
    ]
  }
{% endschema %}