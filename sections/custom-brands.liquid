{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    .custom-brands__image-container{
      display:flex;
      column-gap:60px;
       overflow-x:auto;
      align-items:center;
    }

    .custom-brands__image-container::-webkit-scrollbar{
      width:5px;
      height:5px;
      opacity:0.1;
    }
    .custom-brands__image-container::-webkit-scrollbar-thumb {
    background: lightgray;
    border-radius: 10px;
    }

    .custom-brands__image img{
      height:50px;
    }

  @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }

      .custom-brands__image-container{

      justify-content : space-between;
    }
    }
{% endstyle %}

<div class="custom-brands padding-{{ section.id }}">
  <div class="page-width">
    <div class="custom-brands">
      <h2 class="h4 custom-brands__section-heading">{{ section.settings.section_heading }}</h2>
    </div>
    <div class="custom-brands__image-container">
      {% for block in section.blocks %}
        <div class="custom-brands__image">
          {% render 'responsive-picture', desktopImage: block.settings.desktop_image %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "custom-brands",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Add Brands in Blocks"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Shop by Categories"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Brands Block",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Brand Image"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Brand Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom-brands"
    }
  ]
}
{% endschema %}
